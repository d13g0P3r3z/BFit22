<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoimcc"
    tools:context=".ImcActivity">

    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"


        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-34dp" />

    <Button
        android:id="@+id/buttonImc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:onClick="calcular"
        android:text="CALCULAR IMC"
        android:textColor="#000" />


    <TextView
        android:id="@+id/resultadito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"

        android:layout_marginTop="261dp"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="17dp"
        android:layout_marginTop="203dp"

        android:text="Coloca tu peso: "
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="253dp"
        android:text="Coloca tu altura: "
        android:textColor="#000"

        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="39dp"


        android:textColor="#000" />


    <Switch
        android:id="@+id/switchSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="316dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="Hombre" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/switchSexo"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/switchSexo"
        android:textColor="#000"
        android:textSize="15dp"
        android:text="Mujer" />

    <EditText
        android:id="@+id/peso"
        android:layout_width="167dp"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignStart="@+id/altura"
        android:layout_marginStart="9dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/altura"
        android:layout_width="167dp"
        android:layout_height="wrap_content"


        android:layout_alignBottom="@+id/resultadito"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="62dp"
        android:ems="10"
        android:inputType="numberDecimal" />

</RelativeLayout>