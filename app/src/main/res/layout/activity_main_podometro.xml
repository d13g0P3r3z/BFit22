<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsteps2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivityPodometro"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasos"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="61dp"

        android:gravity="left|center"
        app:srcCompat="@drawable/pie" />

    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:inputType="number"
        android:text="@string/letra"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_infocalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CalorÃ­as quemadas"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="75dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/llamas" />

    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:inputType="numberDecimal"
        android:text="@string/letra2"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <Button
        android:id="@+id/btnReinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="reinit"
        android:text="reinicio" />

</LinearLayout>